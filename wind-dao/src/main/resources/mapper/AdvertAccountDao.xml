<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zmn.advert.persistence.advertapi.AdvertAccountDao">
    <resultMap id="BaseResultMap" type="com.zmn.advert.model.entity.advertapi.AdvertAccount">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="sub_user_name" jdbcType="VARCHAR" property="subUserName"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="advert_type" jdbcType="INTEGER" property="advertType"/>
        <result column="channel_id" jdbcType="INTEGER" property="channelId"/>
        <result column="token" jdbcType="VARCHAR" property="token"/>
        <result column="api_secret" jdbcType="VARCHAR" property="apiSecret"/>
        <result column="active_mark" jdbcType="INTEGER" property="activeMark"/>
        <result column="return_rate" jdbcType="DECIMAL" property="returnRate"/>
        <result column="creat_time" jdbcType="TIMESTAMP" property="creatTime"/>
    </resultMap>
    <sql id="tableName">`advert_account`</sql>

    <sql id="selectTable">
        FROM
        <include refid="tableName"/>
    </sql>

    <sql id="updateTable">
        UPDATE
        <include refid="tableName"/>
        SET
    </sql>

    <sql id="insertTable">
        INSERT INTO
        <include refid="tableName"/>
    </sql>

    <sql id="deleteTable">
        DELETE FROM
        <include refid="tableName"/>
    </sql>

    <sql id="columnNoKey">
	    user_name,
	    `password`,
	    sub_user_name,
	    advert_type,
	    channel_id,
	    token,
	    api_secret,
	    active_mark,
	    return_rate,
	    creat_time
    </sql>

    <sql id="columnAll">
        `user_id`,
        <include refid="columnNoKey"/>
    </sql>
    <sql id="whereKey">
        WHERE `user_id` = #{userId,jdbcType=INTEGER}
    </sql>
    <sql id="orderSql">
        ORDER BY `user_id` ASC
    </sql>
    <sql id="whereSql">
        <where>
            <if test="userId != null">
                AND user_id = #{userId,jdbcType=INTEGER}
            </if>
            <if test="userIds != null and userIds.size() != 0">
                AND user_id IN
                <foreach collection="userIds" item="item" index="index" open="(" separator="," close=")">
                    #{item,jdbcType=INTEGER}
                </foreach>
            </if>
            <if test="userName != null">
                AND user_name = #{userName,jdbcType=VARCHAR}
            </if>
            <if test="advertType != null">
                AND advert_type = #{advertType,jdbcType=INTEGER}
            </if>
            <if test="activeMark != null">
                AND active_mark = #{activeMark,jdbcType=INTEGER}
            </if>
            <if test="userIds != null and userIds.size() == 0">
                AND FALSE
            </if>

            <if test="startDate != null and endDate != null">
                AND `creat_time` BETWEEN STR_TO_DATE(#{startDate,jdbcType=VARCHAR}, '%Y-%m-%d %H:%i:%s') AND STR_TO_DATE(CONCat(#{endDate,jdbcType=VARCHAR},'23:59:59' ), '%Y-%m-%d %H:%i:%s')
            </if>
        </where>
    </sql>
    <sql id="pageSql">
        <if test="pageSize != null and pageSize != 0">
            LIMIT #{startIndex,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
        </if>
    </sql>
    <sql id="countSql">
        SELECT COUNT(*) FROM
    </sql>

    <!--根据主键查询-->
    <select id="findByKey" parameterType="Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="columnAll"/>
        <include refid="selectTable"/>
        <include refid="whereKey"/>
    </select>
    <!--分页查询-->
    <select id="listPage" parameterType="com.zmn.advert.model.entity.advertapi.query.AdvertAccountQuery"
            resultMap="BaseResultMap">
        SELECT
        <include refid="columnAll"/>
        <include refid="selectTable"/>
        <include refid="whereSql"/>
        <include refid="orderSql"/>
        <include refid="pageSql"/>
    </select>
    <!--统计数据量-->
    <select id="countByQuery" parameterType="com.zmn.advert.model.entity.advertapi.query.AdvertAccountQuery"
            resultType="Integer">
        <include refid="countSql"/>
        <include refid="tableName"/>
        <include refid="whereSql"/>
    </select>
</mapper>
